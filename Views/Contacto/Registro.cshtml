@model USMPWEB.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div style="background-color: #ff0033; padding: 30px; text-align: center;">
    <h1 style="color: white; font-size: 2.5em; font-weight: bold;">Contacto</h1>
</div>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6">
            <!-- Formulario vinculado al modelo de Contacto -->
            <form asp-controller="Contacto" asp-action="RegistroPost" method="post" class="formulario p-4" style="background-color: #f7f7f7; border-radius: 10px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                <div class="form-group">
                    <label for="Nombre" style="font-weight: bold;">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control" id="Nombre" placeholder="Ingresar nombre" style="border-radius: 5px;" required />
                </div>
                <div class="form-group">
                    <label for="Correo" style="font-weight: bold;">Correo</label>
                    <input type="email" asp-for="Correo" class="form-control" id="Correo" placeholder="Ingresar correo" style="border-radius: 5px;" required />
                </div>
                <div class="form-group">
                    <label for="Celular" style="font-weight: bold;">Celular</label>
                    <input type="text" asp-for="Celular" class="form-control" id="Celular" placeholder="Ingresar número de celular" style="border-radius: 5px;" required />
                </div>
                <div class="form-group">
                    <label for="Comentario" style="font-weight: bold;">Comentario</label>
                    <textarea asp-for="Comentario" class="form-control" id="Comentario" rows="4" placeholder="Ingresar mensaje" style="border-radius: 5px;" required></textarea>
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="terms" required />
                    <label class="form-check-label" for="terms">Yo acepto los <a href="#" style="color: #ff0033; text-decoration: none;">Términos y Condiciones</a></label>
                </div>
                <button type="submit" class="btn btn-danger btn-block" style="background-color: #ff0033; border-radius: 50px; font-size: 1.2em; padding: 10px 20px;">Enviar</button>
            </form>
        </div>
        <div class="col-md-6">
            <div class="service">
                <h3>Consultas</h3>
                <p>¿Tienes dudas sobre los eventos académicos o actividades organizadas por la USMP? Te brindamos
                    información sobre fechas, inscripciones y detalles importantes.</p>
            </div>
            <div class="service">
                <h3>Pagos e Inscripciones</h3>
                <p>Consulta sobre procesos de inscripción, matrícula y pagos, así como los métodos de
                    pago disponibles.</p>
            </div>
            <div class="service">
                <h3>Asesorías</h3>
                <p>Recibe orientación sobre asesorías académicas, tutorías y servicios de apoyo que la USMP ofrece a sus
                    estudiantes y público en general.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .service {
        padding: 20px;
        border-left: 5px solid #ff0033;
        margin-bottom: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

    .service:hover {
        transform: scale(1.05);
    }

    .service h3 {
        color: #ff0033;
        font-size: 1.8em;
        font-weight: bold;
    }

    .service p {
        font-size: 1.1em;
        color: #333;
        line-height: 1.6;
    }

    .btn-danger {
        background-color: #ff0033;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #cc0026;
        color: #fff;
        font-weight: 600;
    }

    input.form-control, textarea.form-control {
        border: 1px solid #ddd;
        transition: border-color 0.3s ease;
    }

    input.form-control:focus, textarea.form-control:focus {
        border-color: #ff0033;
        box-shadow: none;
    }

    .form-group label {
        font-size: 1.1em;
        color: #333;
    }
</style>
