@model USMPWEB.Models.Inscripciones
@{
    ViewData["Title"] = "Editar Inscripción";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Inscripción - USMP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #C8102E;
        }

        body {
            background-color: #f4f4f4;
        }

        .admin-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .form-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .btn-back {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-back:hover {
            color: #f0f0f0;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #a00d25;
            border-color: #a00d25;
        }
    </style>
</head>

<body>
    <header class="admin-header">
        <div class="container">
            <div class="d-flex align-items-center">
                <a href="@Url.Action("Inscripciones", "Admin")" class="btn-back me-3">
                    <i class="lni lni-arrow-left"></i>
                    Volver
                </a>
                <h1 class="h3 mb-0">Editar Inscripción</h1>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="form-container">
            <form asp-action="EditarInscripcion" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Alumno" class="form-label">Alumno</label>
                    <input asp-for="Alumno" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Proceso" class="form-label">Proceso</label>
                    <input asp-for="Proceso" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Culminado" class="form-label">Estado</label>
                    <select asp-for="Culminado" class="form-select" required>
                        <option value="">Seleccione un estado</option>
                        <option value="No">En Proceso</option>
                        <option value="Si">Culminado</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Inscripciones", "Admin")" class="btn btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>