@model USMPWEB.Models.Campanas
@{
    ViewData["Title"] = "Editar Campaña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Campaña - USMP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #C8102E;
        }

        body {
            background-color: #f4f4f4;
        }

        .admin-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .form-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .btn-back {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-back:hover {
            color: #f0f0f0;
        }

        .btn-guardar {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.5rem 2rem;
        }

        .btn-guardar:hover {
            background-color: #a00d25;
            color: white;
        }

        .btn-cancelar {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 0.5rem 2rem;
        }

        .btn-cancelar:hover {
            background-color: #5a6268;
            color: white;
        }

        .preview-imagen {
            max-width: 200px;
            max-height: 200px;
            margin-top: 1rem;
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <header class="admin-header">
        <div class="container">
            <div class="d-flex align-items-center">
                <a href="@Url.Action("Campanas", "Admin")" class="btn-back me-3">
                    <i class="lni lni-arrow-left"></i>
                    Volver
                </a>
                <h1 class="h3 mb-0">Editar Campaña</h1>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="form-container">
            <form asp-action="EditarCampana" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-8">
                        <label asp-for="Titulo" class="form-label">Título</label>
                        <input asp-for="Titulo" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Imagen" class="form-label">URL de la Imagen</label>
                        <input asp-for="Imagen" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <img src="@Model.Imagen" class="preview-imagen" alt="@Model.Titulo" />
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" required></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Categoría</label>
                        <select name="CategoriaId" class="form-select" required>
                            <option value="">Seleccione una categoría</option>
                            @foreach (var categoria in ViewBag.Categorias)
                            {
                                bool isSelected = Model.CategoriaId.HasValue &&
                                Model.CategoriaId.Value == categoria.IdCategoria;
                                <option value="@categoria.IdCategoria" selected="@isSelected">
                                    @categoria.nomCategoria
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Subcategoría</label>
                        <select name="subCategoriaId" class="form-select">
                            <option value="">Seleccione una subcategoría</option>
                            @foreach (var subCategoria in ViewBag.SubCategorias)
                            {
                                bool isSelected = Model.subCategoriaId.HasValue &&
                                Model.subCategoriaId.Value == subCategoria.IdSubCategoria;
                                <option value="@subCategoria.IdSubCategoria" selected="@isSelected">
                                    @subCategoria.nomSubCategoria
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Inicio</label>
                        <input type="date" name="FechaInicio" class="form-control" required
                            value="@Model.FechaInicio.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Fin</label>
                        <input type="date" name="FechaFin" class="form-control" required
                            value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("Campanas", "Admin")" class="btn btn-cancelar">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-guardar">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>