@model IEnumerable<USMPWEB.Models.Campanas>
@{
    ViewData["Title"] = "Gestión de Campañas";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestión de Campañas - USMP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #C8102E;
        }

        body {
            background-color: #f4f4f4;
        }

        .admin-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .btn-back {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-back:hover {
            color: #f0f0f0;
        }

        .table-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .table thead {
            background-color: #f8f9fa;
        }

        .table th {
            font-weight: 600;
            color: #495057;
        }

        .estado-activo {
            background-color: #d4edda;
            color: #155724;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }

        .estado-finalizado {
            background-color: #f8d7da;
            color: #721c24;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }

        .estado-proximo {
            background-color: #fff3cd;
            color: #856404;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }

        .btn-eliminar {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.375rem 0.75rem;
            border-radius: 4px;
            transition: background-color 0.2s;
        }

        .btn-eliminar:hover {
            background-color: #a00d25;
        }

        .campana-imagen {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
        }

        .descripcion-truncada {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body>
    <header class="admin-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <a href="@Url.Action("Index", "Admin")" class="btn-back">
                        <i class="lni lni-arrow-left"></i>
                        Volver al Panel
                    </a>
                    <h1 class="h3 mb-0">Campañas Registradas</h1>
                </div>
                 <a href="@Url.Action("CrearCampana", "Admin")" class="btn-crear">
                    <i class="lni lni-plus"></i>
                    Nuevas Campañas
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Imagen</th>
                            <th>Categoría</th>
                            <th>Subcategoría</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var campana in Model)
                        {
                            var hoy = DateOnly.FromDateTime(DateTime.Now);
                            string estadoClase = "";
                            string estadoTexto = "";

                            if (campana.FechaInicio > hoy)
                            {
                                estadoClase = "estado-proximo";
                                estadoTexto = "Próximamente";
                            }
                            else if (campana.FechaFin < hoy)
                            {
                                estadoClase = "estado-finalizado";
                                estadoTexto = "Finalizado";
                            }
                            else
                            {
                                estadoClase = "estado-activo";
                                estadoTexto = "Activo";
                            }

                            <tr>
                                <td>@campana.Titulo</td>
                                <td class="descripcion-truncada" title="@campana.Descripcion">
                                    @campana.Descripcion
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(campana.Imagen))
                                    {
                                        <img src="@campana.Imagen" alt="@campana.Titulo" class="campana-imagen">
                                    }
                                </td>
                                <td>@(campana.Categoria?.nomCategoria ?? "No asignada")</td>
                                <td>@(campana.SubCategoria?.nomSubCategoria ?? "No asignada")</td>
                                <td>@campana.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>@campana.FechaFin.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="@estadoClase">@estadoTexto</span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("EditarCampana", "Admin", new { id = campana.Id })"
                                            class="btn btn-sm btn-warning">
                                            <i class="lni lni-pencil"></i>
                                        </a>
                                        <form asp-action="EliminarCampana" asp-route-id="@campana.Id" method="post"
                                            onsubmit="return confirm('¿Está seguro de eliminar esta campaña? Esta acción no se puede deshacer.');">
                                            <button type="submit" class="btn btn-sm btn-eliminar">
                                                <i class="lni lni-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>