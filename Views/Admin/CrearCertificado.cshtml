@model USMPWEB.Models.Certificados
@{
    ViewData["Title"] = "Crear Certificado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Certificado - USMP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <style>
        /* Usar los mismos estilos que en la vista principal */
        :root {
            --primary-color: #C8102E;
        }

        body {
            background-color: #f4f4f4;
        }

        .admin-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .form-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .btn-back {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
</head>
<body>
    <header class="admin-header">
        <div class="container">
            <div class="d-flex align-items-center">
                <a href="@Url.Action("Certificados", "Admin")" class="btn-back me-3">
                    <i class="lni lni-arrow-left"></i>
                    Volver
                </a>
                <h1 class="h3 mb-0">Nuevo Certificado</h1>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="form-container">
            <form asp-action="CrearCertificado" method="post">
                <div class="mb-3">
                    <label asp-for="NombreCertificado" class="form-label">Nombre del Certificado</label>
                    <input asp-for="NombreCertificado" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="FechaExpedicion" class="form-label">Fecha de Expedici√≥n</label>
                    <input type="date" asp-for="FechaExpedicion" class="form-control" required />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Certificados", "Admin")" class="btn btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>